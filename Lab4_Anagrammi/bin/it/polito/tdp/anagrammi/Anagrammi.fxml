<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="361.0" prefWidth="531.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.anagrammi.AnagrammiController">
   <top>
      <Label text="Lab04" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="280.0" prefWidth="436.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txtInput" prefHeight="25.0" prefWidth="195.0" promptText="Insert text.." translateX="30.0" translateY="20.0" />
                  <Button fx:id="btnCalcola" mnemonicParsing="false" onAction="#doCalcola" text="Calcola Anagramma" translateX="100.0" translateY="20.0" />
               </children>
            </HBox>
            <HBox>
               <VBox.margin>
                  <Insets bottom="15.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <ScrollPane prefHeight="165.0" prefWidth="300.0">
                     <content>
                        <TextFlow fx:id="txtOutput" maxHeight="100000.0" prefHeight="50000.0" prefWidth="300.0" />
                     </content>
                  </ScrollPane>
                  <TextArea fx:id="resultArea" editable="false" prefHeight="200.0" prefWidth="200.0" translateX="5.0" />
               </children>
            </HBox>
            <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset" translateX="350.0" translateY="-10.0" />
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblTime" prefHeight="17.0" prefWidth="249.0" text="status" translateX="50.0" translateY="-20.0" />
            <ProgressBar fx:id="pBar" prefHeight="18.0" prefWidth="429.0" progress="0.0" translateX="5.0" translateY="-10.0" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
